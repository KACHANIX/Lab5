<Window x:Class="Lab4GraphicalClient.Adding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4GraphicalClient"
        mc:Ignorable="d"
        Title="Adding" Height="100" Width="300">
    <Grid>
        <TextBox Name="DateInput" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="DD/MM/YYYY" VerticalAlignment="Top" Width="120" TextAlignment="Center" />
        <Label Content="Input the date in next format:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Button Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="207,36,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="AddButton_Click"/>
    </Grid>
</Window>
